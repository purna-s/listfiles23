{
  "name": "listfiles23",
  "version": "0.0.1",
  "type": "flogo:activity",
  "ref": "github.com/purna-s/listfiles23",  
  "title": "listfiles23",
  "description": "Lists all the files in the directory",
  "author": "Purna S <purna.sadanala@prowesssoft.com>",

  "inputs":[
    
	{
      "name": "Path",
      "type": "string",
      "required": true
    },
	{
      "name": "SubDirectories[Y/N]",
      "type": "string",
      "required": true
    }
  ],
  "outputs": [
    {
      "name": "FileName",
      "type": "string",
	  "repeating": "true"
    },
	{
      "name": "Directory",
      "type": "string",
	  "repeating": "true"
    },
	{
      "name": "Extension",
      "type": "string",
	  "repeating": "true"
    },
	{
      "name": "Size",
      "type": "string",
	  "repeating": "true"
    },
	{
      "name": "ModTime",
      "type": "string",
	  "repeating": "true"
    },
	{
      "name": "MinutesDiff",
      "type": "int",
	  "repeating": "true"
    }
  ]
}
